# =============================================================================
# AXIE STUDIO PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
POSTGRES_DB=langflow
POSTGRES_USER=langflow
POSTGRES_PASSWORD=your-secure-database-password-here

# -----------------------------------------------------------------------------
# LANGFLOW BACKEND CONFIGURATION
# -----------------------------------------------------------------------------

# Admin User Configuration
LANGFLOW_SUPERUSER=admin@axiestudio.se
LANGFLOW_SUPERUSER_PASSWORD=your-secure-admin-password-here

# Security Configuration
LANGFLOW_SECRET_KEY=your-secret-key-here-minimum-32-characters
LANGFLOW_JWT_SECRET=your-jwt-secret-here-minimum-32-characters

# Application Configuration
LANGFLOW_LOG_LEVEL=INFO
LANGFLOW_AUTO_LOGIN=false
LANGFLOW_ENABLE_MULTI_USER=true
LANGFLOW_STORE_ENVIRONMENT_VARIABLES=true

# Performance Configuration
LANGFLOW_WORKER_TIMEOUT=300
LANGFLOW_MAX_FILE_SIZE_UPLOAD=100

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------

# Backend Connection
REACT_APP_BACKEND_URL=https://your-domain.com
LANGFLOW_BACKEND_URL=http://langflow-backend:7860

# Multi-tenant Configuration
REACT_APP_MULTI_TENANT=true
REACT_APP_DEFAULT_DOMAIN=axiestudio.com
REACT_APP_CONTACT_EMAIL=stefan@axiestudio.se

# Feature Flags
ENABLE_MULTI_TENANT=true
ENABLE_WHITE_LABEL=true

# -----------------------------------------------------------------------------
# DOMAIN CONFIGURATION
# -----------------------------------------------------------------------------
DEFAULT_DOMAIN=axiestudio.com
CONTACT_EMAIL=stefan@axiestudio.se

# Custom Domain Support
ENABLE_CUSTOM_DOMAINS=true
WILDCARD_SSL_ENABLED=true

# -----------------------------------------------------------------------------
# DIGITAL OCEAN SPECIFIC CONFIGURATION
# -----------------------------------------------------------------------------

# App Platform Configuration
DO_APP_NAME=axie-studio-platform
DO_REGION=nyc1

# Database Connection (Auto-generated by Digital Ocean)
# DATABASE_URL=postgresql://user:pass@host:port/database

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------

# Application Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=INFO

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# -----------------------------------------------------------------------------
# BUSINESS CONFIGURATION
# -----------------------------------------------------------------------------

# Pricing Tiers
BASIC_TIER_PRICE=29
PREMIUM_TIER_PRICE=99
ENTERPRISE_TIER_PRICE=299

# Feature Limits
BASIC_TIER_WORKFLOWS=10
PREMIUM_TIER_WORKFLOWS=100
ENTERPRISE_TIER_WORKFLOWS=1000

# White-label Configuration
ENABLE_WHITE_LABEL_BASIC=false
ENABLE_WHITE_LABEL_PREMIUM=true
ENABLE_WHITE_LABEL_ENTERPRISE=true

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Optional)
# -----------------------------------------------------------------------------

# SMTP Configuration for user notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@axiestudio.se
SMTP_FROM_NAME=Axie Studio

# -----------------------------------------------------------------------------
# ANALYTICS & TRACKING (Optional)
# -----------------------------------------------------------------------------

# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X

# Custom Analytics
ENABLE_CUSTOM_ANALYTICS=true
ANALYTICS_ENDPOINT=https://analytics.axiestudio.se

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------

# CORS Configuration
ALLOWED_ORIGINS=https://axiestudio.com,https://*.axiestudio.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Tenant-Domain

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# -----------------------------------------------------------------------------
# BACKUP CONFIGURATION
# -----------------------------------------------------------------------------

# Database Backup
ENABLE_DB_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# File Backup
ENABLE_FILE_BACKUP=true
BACKUP_STORAGE=s3://your-backup-bucket

# -----------------------------------------------------------------------------
# SCALING CONFIGURATION
# -----------------------------------------------------------------------------

# Auto-scaling
MIN_INSTANCES=1
MAX_INSTANCES=3
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# Load Balancing
ENABLE_LOAD_BALANCING=true
HEALTH_CHECK_PATH=/health

# -----------------------------------------------------------------------------
# DEVELOPMENT/STAGING OVERRIDES
# -----------------------------------------------------------------------------

# Set to 'development' or 'staging' for non-production environments
NODE_ENV=production

# Debug Configuration (disable in production)
DEBUG=false
VERBOSE_LOGGING=false

# -----------------------------------------------------------------------------
# CUSTOM DOMAIN EXAMPLES
# -----------------------------------------------------------------------------

# Example tenant configurations (for reference)
# TENANT_CLIENT1_DOMAIN=client1.axiestudio.com
